@model List<Transaction> // กำหนด Model หากต้องการใช้ Model แทนการใช้ ViewBag

<!-- เริ่มต้นการแสดงข้อมูล Transaction -->
<div>
    <h1>User Transactions</h1>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Action</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in ViewBag.UserTransactions)
            {
                <tr>
                    <td>@transaction.DateTime</td>
                    <td>@transaction.Action</td>
                    <td>@transaction.Amount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- สิ้นสุดการแสดงข้อมูล Transaction -->
