@model BankWebApplication.Models.User
@{
    ViewData["Title"] = "Transfer Page";
}

<form asp-action="Transfer" method="post">
    <div class="form-group">
        <label for="recipientId">Recipient User ID:</label>
        <input type="number" class="form-control" id="recipientId" name="recipientId" required>
    </div>
    <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="number" class="form-control" id="amount" name="amount" required>
    </div>
    <button type="submit" class="btn btn-primary mt-5">Transfer</button>
</form>
